# Environment Configuration for Football Insights API
# Copy this file to .env and adjust settings for your environment

# Environment setting - Options: TEST, DEV, QUAL, PROD
ENVIRONMENT=DEV

# Data settings
DATA_CACHE_DIR=data_cache
USE_MOCK_DATA=false
MAX_COMPETITIONS=10
MAX_MATCHES_PER_COMPETITION=7

# API settings
API_HOST=0.0.0.0
API_PORT=8000
ENABLE_CORS=true
ALLOWED_ORIGINS='["http://localhost:8080","http://127.0.0.1:9003", "https://preview--match-viz-explorer.lovable.app"]'

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=false
LOG_FILE=logs/api.log

# Performance
CACHE_EXPIRY_SECONDS=3600
USE_COMPRESSION=true
