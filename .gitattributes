# Python binary files
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary

# Set default behavior for text files
* text=auto

# Explicitly declare text files to be normalized
*.py text
*.md text
*.txt text
*.yml text
*.yaml text
*.json text

# Define files that should have specific line endings
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
